<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using MySQL and Node.js</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    table, td, th {  
      border: 3px solid white;
      text-align: left;
    }
    
    table {
      border-collapse: collapse;
      width: 100%;
      height: 100%;
      padding: 3px;
     

    }
    .table-data{
        position: relative;
        padding-bottom: 2%;
    }
    th, td {
      padding: 15px;
    }
    th{
      border: solid black 3px;
    }

    </style>
</head>
<body>
<div class="table-data">
    <table border="1">
        <tr>
            <th>Rank</th>
            <th>User</th>
            <th>Email Address</th>
            <th>Referrals</th>
          
        </tr>
        
        <%
        if(userData.length!=0){
        var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.UserID %></td>
            <td><%=data.EmailID %></td>
            <td><%=data.Referral_Count %></td>
        </tr>
        <%  i++; }); %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
    </div>
</body>
</html>